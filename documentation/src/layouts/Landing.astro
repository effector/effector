---
import CommonLayout from "../layouts/CommonLayout.astro";
import LandingHeader from "../components/Landing/LandingHeader.astro";

interface Props {
  title: string;
  lang: "en" | "ru" | "uz";
  description: string;
  dir?: "ltr" | "rtl";
}

const { title, lang, description, dir = "ltr" } = Astro.props;
---

<CommonLayout lang={lang} title={title} dir={dir} description={description}>
  <div class="landing">
    <LandingHeader lang={lang} />
    <slot />
  </div>
</CommonLayout>

<style>
  :root {
    --header-max-width: 98rem;
  }

  .landing {
    padding-top: var(--theme-navbar-height);
  }

  @media (min-width: 768px) {
    .landing {
      padding-top: 0;
    }
  }
</style>
