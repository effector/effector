{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noLib": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "effector": ["packages/effector"],
      "forest": ["packages/forest"],
      "effector-vue": ["packages/effector-vue"],
      "effector/*": ["src/*"]
    }
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src", "packages"]
}
